<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/registrations/add">
                <table cellpadding="11">
                <tr>
                    <td class="label">Fname</td><td>: <input type="text" name="fname" placeholder="First Name" required></td>
                 </tr>
                
                  <tr>
                    <td class="label">Lname</td><td>: <input type="text" name="lname" placeholder="Last Name"required></td>
                 </tr>

                 <tr>
                    <td class="label">Dob</td><td>: <input type="date" placeholder="like yyyy-mm-dd" name="dob" required></td>
                 </tr>
                  
                  <tr>
                      <td class="lable">Gender:</td>
                      <td><input type="radio" name ="gender" value ="male">Male</td>
                      <td><input type="radio" name ="gender" value ="female">Female</td>
                      <td><input type="radio" name ="gender" value ="other">Others</td>
                 </tr>
                  
                 <tr>
                    <td class="label" valign="top">Address</td><td valign="top">: <textarea name="address" required cols="30" rows="5"></textarea></td>
                </tr>
                
                   
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAdd()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>


